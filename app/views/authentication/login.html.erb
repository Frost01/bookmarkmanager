<h2>Login</h2>

<% form_tag :controller => "authentication", :action => "check" do %>
	<p>
		<label for="user">Benutzername</label>
		<%= text_field_tag :user%>
	</p>
	
	<p>
		<label for="password">Passwort</label>
		<%= password_field_tag :password%>
	</p>
	
	<p>
		<%= submit_tag "login"%>
	</p>
<%end%>
